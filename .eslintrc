{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "parserOptions.ecmaVersion": true
    }
  },
  "rules": {
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "semi": [2, "never"]
  }
}
